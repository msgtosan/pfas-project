#!/usr/bin/env python3
"""
PFAS Financial Reports CLI - Direct Runner

This script can be run directly from the project root without installation.

Usage:
    ./pfas-report --user Sanjay --fy 2024-25
    ./pfas-report --user Sanjay --fy 2024-25 --report balance-sheet
    ./pfas-report --help
"""

import sys
import os

# Add src to path for direct execution
script_dir = os.path.dirname(os.path.abspath(__file__))
src_path = os.path.join(script_dir, "src")
if src_path not in sys.path:
    sys.path.insert(0, src_path)

# Now import and run the CLI
from pfas.cli.reports_cli import main

if __name__ == "__main__":
    sys.exit(main())
